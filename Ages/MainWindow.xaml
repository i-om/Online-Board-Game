                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image Source="Images/StartMenu.png" Grid.Column="1" Grid.Row="1" Stretch="Uniform" Height="700"/>
            
            
            <Grid Grid.Row="1"  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200*"/>
                    <ColumnDefinition Width="350*"/>
                    <ColumnDefinition Width="200*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="169*"/>
                        <RowDefinition Height="64*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="323*"/>
                        <ColumnDefinition Width="126*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Margin="0">
                        <Button x:Name="btn_TestStart" Content="TestStart" Click="btn_TestStart_Click" Margin="10,5"/>                    
                        <Button x:Name="btn_Join" Content="Join" Height="20" Click="Join_Click" IsEnabled="False" Grid.Column="1" Margin="10,5"/>
                        <Button x:Name="btn_Connect" Content="Connect" Click="Connect_Click" Margin="10,5"/>
                    </StackPanel>
                    

                    <Button x:Name="btn_StartGame" Content="Start Game" Click="btn_StartGame_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Width="90" IsEnabled="False"/>
                   
                  
                    <TextBox x:Name="textBoxChatPane" TextWrapping="Wrap"  Margin="5,5,5,5" />
                    <Grid Grid.Row="1" Background="White" Height="22" Margin="80,0" >
                        <TextBlock Text="Input your name here "  Grid.Row="1" Foreground="Gray" Padding="6,3,0,0"  
                               Visibility="{Binding ElementName=textBoxName, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBox x:Name="textBoxName"  Background="Transparent"  Grid.Row="1"  />
                    </Grid>

                </Grid>
            </Grid>
           
        </Grid>
    </Grid>
    
</Window>
